@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row h-100">
    <div class="col-12 col-md-10 mx-auto my-auto">
        <div class="card auth-card">
            <div class="position-relative image-side ">

                <p class=" text-white h2">MAGIC IS IN THE DETAILS</p>

                <p class="white mb-0">
                    Por favor, informe sua credencial para realizar LOGIN.
                    <br>Se você ainda não tem uma conta, por favor
                    <b><a asp-area="Identity" asp-page="/Account/Register" class="white">Registre Aqui</a></b>.
                </p>
            </div>
            <div class="form-side">
                <a href="Dashboard.Default.html">
                    <span class="logo-single"></span>
                </a>
                <h6 class="mb-4">Login</h6>
                <form id="account" method="post">
                    <label class="form-group has-float-label mb-4">
                        <input class="form-control" asp-for="Input.Email" />
                        <span>E-mail</span>
                    </label>

                    <label class="form-group has-float-label mb-4">
                        <input class="form-control" type="password" placeholder="" asp-for="Input.Password" />
                        <span>Senha</span>
                    </label>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#">Esqueceu a senha?</a>
                        <button class="btn btn-primary btn-lg btn-shadow" type="submit">LOGIN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
