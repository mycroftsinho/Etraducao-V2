@{
    int totalDeItens = ViewBag.TotalDeItens;
    int totalDePaginas = ViewBag.TotalDePaginas;
    int pagina = ViewBag.Page;

    int paginaAnterior = 0;
    int proximaPagina = pagina + 1;
    
    if (pagina != 1)
    {
        paginaAnterior = pagina - 1;
    }
}

<nav class="mt-4 mb-3">
    <ul class="pagination justify-content-center mb-0">
        <li class="page-item ">
            <a class="page-link prev" href="#">
                <i class="simple-icon-arrow-left"></i>
            </a>
        </li>
        @if (pagina == 1 && totalDePaginas <= 3)
        {
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>

            @for (int i = 2; i <= totalDePaginas; i++)
            {
                <li class="page-item ">
                    <a class="page-link" href="#">@i</a>
                </li>
            }
        }
        else
        {
            <li class="page-item ">
                <a class="page-link" href="#">@paginaAnterior</a>
            </li>

            <li class="page-item active">
                <a class="page-link" href="#">@pagina</a>
            </li>

            <li class="page-item ">
                <a class="page-link" href="#">@proximaPagina</a>
            </li>
        }
    </ul>
</nav>